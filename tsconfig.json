{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "esnext",
        "target": "es2016",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "baseUrl": "./ui",
        "paths": {
            "~*": [
                "./*"
            ]
        },
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "exclude": [
        "node_modules",
        "ios",
        "android"
    ]
}
